<h2>Listing Activity</h2>

<table class="table">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Time</th>
      <th>Activity</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for activity <- @activity do %>
    <tr>
      <td><%= activity.user_id %></td>
      <td><%= activity.inserted_at %></td>
      <td><%= activity.activity %></td>

      <td class="text-right">
        <span><%= link "Show", to: activity_path(@conn, :show, activity), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: activity_path(@conn, :delete, activity), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
